<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/item_detail"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:textIsSelectable="true"
        tools:context=".ItemDetailFragment" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/Logo_equipe1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="logo_equipe1"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/acronyme_equipe1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textAppearance="?attr/textAppearanceListItem" />
        <TextView
            android:id="@+id/periode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="Finale"
            android:textAlignment="center"
            android:textAppearance="?attr/textAppearanceListItem" />
        <TextView
            android:id="@+id/acronyme_equipe2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textAppearance="?attr/textAppearanceListItem" />
        <ImageView
            android:id="@+id/Logo_equipe2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="logo_equipe2"
            android:src="@mipmap/ic_launcher" />


    </TableRow>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">




        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/space_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin"
                    android:textAppearance="?attr/textAppearanceListItem" />
                <TextView
                    android:id="@+id/space_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin"
                    android:textAppearance="?attr/textAppearanceListItem" />
                <TextView
                    android:id="@+id/periode_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:text="1RE"/>
                <TextView
                    android:id="@+id/periode_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:text="2RE"/>
                <TextView
                    android:id="@+id/periode3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:text="3RE"/>
                <TextView
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:text="T"/>
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/Logo_equipe11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="1dp"
                    android:contentDescription="logo_equipe1"
                    android:src="@mipmap/ic_launcher" />
                <TextView
                    android:id="@+id/acronyme_equipe11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin"
                    android:textAppearance="?attr/textAppearanceListItem" />

                <TextView
                    android:id="@+id/Score_equipe1_periode1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin"
                    android:text="00"
                    android:textAppearance="?attr/textAppearanceListItem" />
                <TextView
                    android:id="@+id/Score_equipe1_periode2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin"
                    android:text="00"
                    android:textAppearance="?attr/textAppearanceListItem" />
                <TextView
                    android:id="@+id/Score_equipe1_periode3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin"
                    android:text="00"
                    android:textAppearance="?attr/textAppearanceListItem" />
                <TextView
                    android:id="@+id/Score_equipe1_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin"
                    android:text="00"
                    android:textAppearance="?attr/textAppearanceListItem" />
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/Logo_equipe22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="logo_equipe2"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/acronyme_equipe22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin"
                    android:textAppearance="?attr/textAppearanceListItem" />

                <TextView
                    android:id="@+id/Score_equipe2_periode1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin"
                    android:text="00"
                    android:textAppearance="?attr/textAppearanceListItem" />
                <TextView
                    android:id="@+id/Score_equipe2_periode2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin"
                    android:text="00"
                    android:textAppearance="?attr/textAppearanceListItem" />
                <TextView
                    android:id="@+id/Score_equipe2_periode3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin"
                    android:text="00"
                    android:textAppearance="?attr/textAppearanceListItem" />
                <TextView
                    android:id="@+id/Score_equipe2_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin"
                    android:text="00"
                    android:textAppearance="?attr/textAppearanceListItem" />
            </TableRow>

            <View
                android:id="@+id/divider3"
                android:layout_width="10dp"
                android:layout_height="99dp"
                android:layout_weight="1"
                android:background="?android:attr/listDivider" />

        </TableLayout>
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TableRow>

        </TableLayout>
    </LinearLayout>
</LinearLayout>
